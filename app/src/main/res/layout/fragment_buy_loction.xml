<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.BuyLoctionFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300px"
        android:layout_height="300px"
        app:srcCompat="@drawable/tiglogo"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="530px"
        android:layout_height="190px"
        android:layout_marginTop="40px"
        android:text="위치선택"
        android:textColor="@color/black"
        android:textSize="144px"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/GridLayout"
        android:layout_width="1100px"
        android:layout_height="770px"
        android:layout_marginTop="51px"
        android:background="@drawable/location_bg"
        android:orientation="horizontal"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">
        <Button
            android:id="@+id/buyFirst"
            android:layout_width="550px"
            android:layout_height="385px"
            android:text="1"
            android:textSize="200px"
            android:textColor="@color/white"
            android:background="@drawable/button_bg"
            app:layout_columnSpan="2"
            app:layout_gravity="fill"
            />
        <Button
            android:id="@+id/buySecond"
            android:layout_width="550px"
            android:layout_height="385px"
            android:text="2"
            android:textSize="200px"
            android:textColor="@color/white"
            android:background="@drawable/button_bg"
            app:layout_columnSpan="2"
            app:layout_gravity="fill"
            />
        <Button
            android:id="@+id/buyThird"
            android:layout_width="550px"
            android:layout_height="385px"
            android:text="3"
            android:textSize="200px"
            android:textColor="@color/white"
            android:background="@drawable/button_bg"
            app:layout_columnSpan="2"
            app:layout_gravity="fill"
            />
        <Button
            android:id="@+id/buyForth"
            android:layout_width="550px"
            android:layout_height="385px"
            android:text="4"
            android:textSize="200px"
            android:textColor="@color/white"
            android:background="@drawable/button_bg"
            app:layout_columnSpan="2"
            app:layout_gravity="fill"
            />
    </GridLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="94px"
        android:layout_marginRight="121px"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="포인트: 0"
            android:textColorHint="@color/black"
            android:textSize="40px"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>