<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.WatingFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="504px"
        android:layout_height="504px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/tiglogobig"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="94px"
        android:layout_marginRight="121px"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="회원 정보: 류호성"
            android:textColorHint="@color/black"
            android:textSize="30px"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="포인트: 0"
            android:textColorHint="@color/black"
            android:textSize="30px"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/Product_buy"
        android:layout_width="639px"
        android:layout_height="373px"
        android:background="#42A5F5"
        android:orientation="horizontal"
        android:layout_marginTop="465px"
        android:layout_marginLeft="180px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="96px"
            android:textColor="@color/white"
            android:text="제품구매" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/Product_sell"
        android:layout_width="639px"
        android:layout_height="373px"
        android:layout_marginTop="465px"
        android:background="#42A5F5"
        android:orientation="horizontal"
        android:layout_marginRight="180px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="96px"
            android:textColor="@color/white"
            android:text="제품 판매" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pointChargeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="180px"
        android:layout_marginBottom="80px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="포인트가 부족하십니까?"
            android:textColor="@color/black"
            android:layout_marginRight="25px"
            android:textSize="30px"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/pointCharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="충전하기"
            android:textColor="#557AFF"
            android:textSize="48px"
            android:textStyle="bold"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
