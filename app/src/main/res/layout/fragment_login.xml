<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300px"
        android:layout_height="300px"
        app:srcCompat="@drawable/tiglogo"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="530px"
        android:layout_height="190px"
        android:layout_marginTop="40px"
        android:text="로그인"
        android:textColor="@color/black"
        android:textSize="144px"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/GridLayout"
        android:layout_width="770px"
        android:layout_height="812px"
        android:layout_marginTop="51px"
        android:background="@drawable/layout_bg"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="84px"
            android:layout_marginTop="119px"
            android:text="회원명"
            android:textColor="@color/black"
            android:textSize="48px" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="114px"
            android:layout_marginLeft="81px"
            android:layout_marginTop="15px"
            android:layout_marginRight="80px"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="84px"
            android:layout_marginTop="61px"
            android:text="E-mail"
            android:textColor="@color/black"
            android:textSize="48px" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="114px"
            android:layout_marginLeft="81px"
            android:layout_marginTop="15px"
            android:layout_marginRight="80px"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:inputType="textPersonName" />



        <Button
            android:id="@+id/button"
            android:layout_width="166px"
            android:layout_height="75px"
            android:layout_gravity="right"
            android:layout_marginRight="114px"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:background="@color/white"
            android:layout_marginTop="86px"
            android:text="로그인"
            android:textSize="30px"
            android:textStyle="bold"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>